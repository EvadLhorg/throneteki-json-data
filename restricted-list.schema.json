{
    "additionalProperties": false,
    "definitions": {
        "cardCodeArray": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "^[0-9]{5}$"
            }
        },
        "format": {
            "additionalProperties": false,
            "type": "object",
            "properties": {
                "name": {
                    "enum": ["joust", "melee"]
                },
                "restricted": {
                    "$ref": "#/definitions/cardCodeArray"
                },
                "banned": {
                    "$ref": "#/definitions/cardCodeArray"
                }
            },
            "required": ["restricted"]
        }
    },
    "type": "array",
    "items": {
        "properties": {
            "date": {
                "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "type": "string"
            },
            "formats": {
                "type": "array",
                "items": {
                    "$ref": "#/definitions/format"
                }
            },
            "bannedCards": {
                "$ref": "#/definitions/cardCodeArray"
            },
            "version": {
                "type": "string"
            },
            "issuer": {
                "enum": [
                    "Fantasy Flight Games",
                    "The Conclave"
                ]
            }
        },
        "required": [
            "bannedCards",
            "date",
            "formats",
            "version",
            "issuer"
        ]
    }
}
